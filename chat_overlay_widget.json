{
  "name": "Twitch Chat Overlay",
  "description": "Real-time Twitch chat overlay with animated messages, user badges, pronouns, and customizable styling. Features smooth enter/exit animations, message queuing, and OG link previews.",
  "version": "1.0.0",
  "framework": "vue",
  "isEnabled": true,
  "eventSubscriptions": [
    "twitch.chat.message",
    "twitch.chat.message_delete",
    "twitch.chat.user_ban",
    "twitch.chat.user_timeout",
    "twitch.user.update",
    "twitch.chat.badges_update"
  ],
  "settings": {
    "maxMessages": 4,
    "chatAnimationDuration": 0.75,
    "chatShowDuration": 30,
    "defaultColor": "#f72264",
    "dimensions": {
      "width": "25%",
      "position": "top-right",
      "padding": "24px",
      "gap": "12px"
    },
    "styling": {
      "chatBox": {
        "backgroundColor": "transparent",
        "overflow": "hidden",
        "scrollbar": "none"
      },
      "messageContainer": {
        "backgroundColor": "rgba(23, 23, 23, 0.9)",
        "borderRadius": "8px",
        "padding": "12px 16px",
        "marginTop": "12px"
      },
      "banner": {
        "height": "32px",
        "borderRadius": "8px",
        "padding": "0 8px",
        "fontSize": "1.125rem",
        "fontWeight": "bold"
      },
      "avatar": {
        "size": "56px",
        "borderRadius": "50%",
        "border": "2px solid"
      },
      "messageBubble": {
        "backgroundColor": "#171717",
        "borderRadius": "8px",
        "padding": "12px",
        "fontSize": "1.1rem",
        "lineHeight": "1.75",
        "fontWeight": "500",
        "maxHeight": "384px"
      }
    },
    "animations": {
      "enterDirection": "right",
      "exitDirection": "left",
      "sequenceTiming": {
        "bannerDelay": 0.0,
        "avatarDelay": 0.3,
        "bubbleDelay": 0.6,
        "contentDelay": 0.9
      },
      "durations": {
        "banner": "0.5s",
        "avatar": "0.3s",
        "bubble": "0.4s",
        "content": "0.3s",
        "shine": "12s"
      },
      "easings": {
        "default": "ease-out",
        "entrance": "ease-in-out",
        "exit": "ease-in-out"
      }
    },
    "features": {
      "userBadges": true,
      "userPronouns": true,
      "userColors": true,
      "lightColorDetection": true,
      "shineEffect": true,
      "marqueeText": true,
      "ogPreviews": true,
      "emoteSupport": true,
      "whitelistedUsers": true
    },
    "content": {
      "supportedNodes": [
        "rootNode",
        "span",
        "p",
        "a",
        "b",
        "u",
        "i",
        "strong",
        "small",
        "div",
        "emote",
        "img",
        "marquee",
        "og-preview"
      ],
      "emoteSize": "28px",
      "linkBreaking": "break-all",
      "maxImageHeight": "384px"
    },
    "positioning": {
      "containerClass": "absolute top-0 right-0 flex flex-col w-1/4 h-available mb-16 mr-6 mt-6",
      "zIndexBase": 1,
      "zIndexActive": 2,
      "zIndexAvatar": 20,
      "zIndexBanner": 10
    },
    "performance": {
      "willChange": "auto",
      "transitionOptimization": true,
      "useTransformGPU": true
    }
  }
}
